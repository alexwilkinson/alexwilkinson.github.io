// ~ fonts
@font-face
  font-family: 'Inconsolata'
  src: url('/assets/styles/fonts/inconsolata-webfont.eot')
  src: url('/assets/styles/fonts/inconsolata-webfont.eot?#iefix') format('embedded-opentype'),
       url('/assets/styles/fonts/inconsolata-webfont.woff') format('woff'),
       url('/assets/styles/fonts/inconsolata-webfont.ttf') format('truetype'),
       url('/assets/styles/fonts/inconsolata-webfont.svg#inconsolatamedium') format('svg')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Lato Regular'
  src: url('/assets/styles/fonts/lato-regular-webfont.eot')
  src: url('/assets/styles/fonts/lato-regular-webfont.eot?#iefix') format('embedded-opentype'),
       url('/assets/styles/fonts/lato-regular-webfont.woff') format('woff'),
       url('/assets/styles/fonts/lato-regular-webfont.ttf') format('truetype'),
       url('/assets/styles/fonts/lato-regular-webfont.svg#latoregular') format('svg')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Lato Italic'
  src: url('/assets/styles/fonts/lato-italic-webfont.eot')
  src: url('/assets/styles/fonts/lato-italic-webfont.eot?#iefix') format('embedded-opentype'),
       url('/assets/styles/fonts/lato-italic-webfont.woff') format('woff'),
       url('/assets/styles/fonts/lato-italic-webfont.ttf') format('truetype'),
       url('/assets/styles/fonts/lato-italic-webfont.svg#latoitalic') format('svg')
  font-weight: normal
  font-style: italic

@font-face
  font-family: 'Lato Bold'
  src: url('/assets/styles/fonts/lato-bold-webfont.eot')
  src: url('/assets/styles/fonts/lato-bold-webfont.eot?#iefix') format('embedded-opentype'),
       url('/assets/styles/fonts/lato-bold-webfont.woff') format('woff'),
       url('/assets/styles/fonts/lato-bold-webfont.ttf') format('truetype'),
       url('/assets/styles/fonts/lato-bold-webfont.svg#latobold') format('svg')
  font-weight: bold
  font-style: normal

fontSans      = "Lato Regular", "Helvetica Neue", Helvetica, Arial, sans-serif
fontMonospace = "Inconsolata", Consolas, "Liberation Mono", Menlo, Courier, monospace

// ~ colors
alpha   = #666
beta    = #222
gama    = #919191
delta   = #4b0082
epsilon = #ededed
